{% embed '@ibexadesign/ui/component/modal/modal.html.twig' with {
    class: 'ibexa-modal--send-to-trash',
    no_header: true,
    id: 'delete-user-modal',
} %}
    {% trans_default_domain 'ibexa_user_delete' %}
    {% form_theme form '@ibexadesign/ui/form_fields.html.twig' %}

    {% block body_content %}
        {{ 'delete.modal.message'|trans|desc('Are you sure you want to delete this User?') }}
    {% endblock %}
    {% block footer_content %}
        {{ form_start(form, {'action': path('ibexa.user.delete')}) }}
        {{ form_widget(form.delete, {'attr': {'class': 'btn ibexa-btn ibexa-btn--primary'}}) }}
        <twig:ibexa:button html_type="button" type="secondary" data-bs-dismiss="modal">
            {{ 'delete.form.cancel'|trans|desc('Cancel') }}
        </twig:ibexa:button>
        {{ form_end(form) }}
    {% endblock %}
{% endembed %}
