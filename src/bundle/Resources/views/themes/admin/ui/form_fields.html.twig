    {%- set group_form = form.children[filled_group_key]|first -%}

    <div class="ibexa-edit-content__container ibexa-edit-content__container--seo">
        {% embed "@ibexadesign/content_type/edit_section.html.twig" with {
            section_id: "#ibexa-edit-content-type-sections-meta-" ~ group_form.vars.value.identifier,
            is_active: false,
            one_column_layout: true,
        } %}
            {% block title %}
                {{ 'content_type.view.edit.seo'|trans|desc('SEO') }}
            {% endblock %}

            {% block left_column %}
                {{ form_widget(group_form)}}
            {% endblock %}
        {% endembed %}
    </div>
{%- endblock %}

