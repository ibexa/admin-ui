{% trans_default_domain 'content_type' %}

{% macro attributes(attr) -%}
    {%- for attrname, attrvalue in attr -%}
        {{- " " -}}
        {%- if attrvalue is same as(true) -%}
            {{- attrname }}="{{ attrname|e('html_attr') }}"
        {%- elseif attrvalue is not same as(false) -%}
            {{- attrname }}="{{ attrvalue|e('html_attr') }}"
        {%- endif -%}
    {%- endfor -%}
{%- endmacro -%}

{% macro headline(count, hasFilters = false, fraze = null) %}
    {% if hasFilters %}
        {% if fraze %}
            {{ 'list.headline.results.search'|trans({ '%count%': count, '%fraze%': fraze })|desc('Results for "%fraze%" (%count%)') }}
        {% else %}
            {{ 'list.headline.results'|trans({ '%count%': count })|desc('Results (%count%)') }}
        {% endif %}
    {% else %}
        {{ 'list.headline'|trans({ '%count%': count })|desc('List (%count%)') }}
    {% endif %}
{% endmacro %}
