{% trans_default_domain 'list' %}

{% macro attributes(attr) -%}
    {%- for attrname, attrvalue in attr -%}
        {{- " " -}}
        {%- if attrvalue is same as(true) -%}
            {{- attrname }}="{{ attrname|e('html_attr') }}"
        {%- elseif attrvalue is not same as(false) -%}
            {{- attrname }}="{{ attrvalue|e('html_attr') }}"
        {%- endif -%}
    {%- endfor -%}
{%- endmacro -%}

{% macro headline(count, hasFilters = false, phrase = null) %}
    {% set headline_content = 'list.headline'|trans({ '%count%': count })|desc('List (%count%)') %}

    {% if hasFilters %}
        {% set headline_content = 'list.headline.results'|trans({ '%count%': count })|desc('Results (%count%)') %}
    {% endif %}

    {% if phrase %}
        {% set headline_content = 'list.headline.results.search'|trans({ '%count%': count, '%phrase%': phrase })|desc('Results for "%phrase%" (%count%)') %}
    {% endif %}

    {{ headline_content }}
{% endmacro %}
