<div class="ibexa-multistep-selector ibexa-multistep-selector--{{ id }} {{ class|default('') }}">
    {% if title is defined %}
        <h3>{{ title }}</h3>
    {% endif %}

    {% if info is defined %}
        {% include '@ibexadesign/ui/component/alert/alert.html.twig' with {
            type: 'info',
            title: info,
        } only %}
    {% endif %}

    <div class="ibexa-multistep-selector__steps">
        {% for step in steps %}
            {% include '@ibexadesign/ui/component/multistep_selector/step_selector.html.twig' with {
                id: step.id,
                label: step.label,
            } %}
        {% endfor %}
    </div>

    {% if source is defined %}
        {# TODO: Hide source when everything ready; currently visible for debug purposes #}
        <div class="ibexa-multistep-selector__source"> 
            {{ source }}
        </div>
    {% endif %}
</div>