{% import '@ibexadesign/ui/component/macros.html.twig' as macros %}

<div
    class="ibexa-collapse {{ is_hidden|default(false) ? 'ibexa-collapse--hidden' }} {{ class|default('') }}"
    draggable="{{ is_draggable|default(false) ? 'true' : 'false' }}"
    {{ macros.attributes(data_attr|default({})) }}
>
    {% block header %}
        <div class="ibexa-collapse__header {{ header_class|default('') }}">
            {% block header_content %}
                {% if is_draggable|default(false) %}
                    <twig:ibexa:button
                        html_type="button"
                        type="tertiary-alt"
                        icon="drag"
                        icon_size="small-medium"
                        class="ibexa-collapse__draggable-btn"
                    />
                {% endif %}

                <twig:ibexa:button
                    html_type="button"
                    type="tertiary"
                    class="ibexa-collapse__toggle-btn ibexa-collapse__toggle-btn--title {{ not is_expanded|default(false) ? 'collapsed' }} {{ label_button_class|default('') }}"
                    data-bs-toggle="collapse"
                    data-bs-target="#{{ body_id }}"
                >
                    <span class="ibexa-collapse__header-label">{{ header_label|default('') }}</span>
                </twig:ibexa:button>

                {% if extra_actions is defined %}
                    {% for action in extra_actions %}
                        <twig:ibexa:button
                            html_type="button"
                            type="tertiary-alt"
                            icon="{{ action.icon_name }}"
                            icon_size="{{ action.icon_size|default('small-medium') }}"
                            class="ibexa-collapse__extra-action-button {{ action.button_class|default('') }}"
                        />
                    {% endfor %}
                {% endif %}

                <twig:ibexa:button
                    html_type="button"
                    type="tertiary-alt"
                    class="ibexa-collapse__toggle-btn ibexa-collapse__toggle-btn--status {{ not is_expanded|default(false) ? 'collapsed' }}"
                    data-bs-toggle="collapse"
                    data-bs-target="#{{ body_id }}"
                >
                    <svg class="ibexa-icon ibexa-icon--tiny-small ibexa-icon--toggle-status-icon {{ status_icon_class|default('') }}">
                        <use xlink:href="{{ ibexa_icon_path(status_icon|default('caret-up')) }}"></use>
                    </svg>
                </twig:ibexa:button>
            {% endblock %}
        </div>
    {% endblock %}

    {% block body %}
        <div class="ibexa-collapse__body collapse {{ is_expanded|default(false) ? 'show' }} {{ body_class|default('') }}" id="{{ body_id }}">
            {% block body_content_wrapper %}
                <div class="ibexa-collapse__body-content">
                    {% block body_content %}{% endblock %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}
</div>
