{% import '@ibexadesign/ui/component/macros.html.twig' as macros %}

<li class="ibexa-popup-menu__item {{ class|default('') }}">
    <button type="button" class="ibexa-popup-menu__item-content {{ content_class|default('') }}" {{ macros.attributes(action_attr|default({})) }}>
        {{ label }}
        <svg class="ibexa-icon ibexa-icon--small ibexa-tabs__tab-warning-icon">
            <use xlink:href="{{ ibexa_icon_path('warning-triangle') }}"></use>
        </svg>
    </button>
</li>
