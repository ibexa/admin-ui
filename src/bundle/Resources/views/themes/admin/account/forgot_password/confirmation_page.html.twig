{% extends '@ibexadesign/account/base.html.twig' %}

{%- block content -%}
    <twig:ibexa:link
        href="{{ path('login') }}"
        variant="button"
        type="tertiary"
        icon="back"
        icon_size="small-medium"
        class="ibexa-login__btn--back"
    >
        {{ 'authentication.reset_your_password.back'|trans|desc('Back') }}
    </twig:ibexa:link>
    <h2 class="ibexa-login__actions-headline">{{ 'ibexa.forgot_user_password.reset_your_password'|trans|desc('Reset your password') }}</h2>
    {% embed '@ibexadesign/ui/component/alert/alert.html.twig' with {
        type: 'success',
        title: 'ibexa.forgot_user_password.success.alert'|trans|desc('We’ve sent to your email account a link to reset your password.'),
        icon_path: ibexa_icon_path('checkmark'),
        class: 'mt-4',
    } only %}
        {% block extra_content %}
            <span class="ibexa-datetime-format-preview-value" />
        {% endblock %}
    {% endembed %}
    <p class="ibexa-login__actions-subheadline">
        {{ 'ibexa.forgot_user_password.success'|trans|raw
        |desc('<p>If you don’t receive the email, double check that you entered the correct email address and check your spam folder.</p>') }}
    </p>
    <div class="ibexa-login__actions">
        <twig:ibexa:link
            href="{{ path('login') }}"
            variant="button"
            type="primary"
        >
            {{ 'authentication.reset_your_password.back_to_sign_in'|trans|desc('Go back to Sign in') }}
        </twig:ibexa:link>
    </div>
{%- endblock content -%}
