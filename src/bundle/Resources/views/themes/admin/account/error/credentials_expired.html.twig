{% extends '@ibexadesign/account/base.html.twig' %}

{%- block content -%}
    <h2 class="ibexa-login__actions-headline">
        {{ 'authentication.credentials_expired'|trans|desc('Your password has expired.') }}
    </h2>
    <p>
        {{ 'authentication.credentials_expired.message'|trans|desc(
            'Your password has expired and must be changed. You will receive an email with instructions how to reset your password.'
        ) }}
    </p>
    <p>
        <twig:ibexa:link
            href="{{ path('ibexa.user.forgot_password') }}"
            variant="button"
            type="primary"
            class="ibexa-btn--login"
        >
            {{ 'authentication.credentials_expired.reset_password'|trans|desc('Reset password') }}
        </twig:ibexa:link>
    </p>
{%- endblock -%}
