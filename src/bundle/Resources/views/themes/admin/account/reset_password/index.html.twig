{% extends '@ibexadesign/account/base.html.twig' %}

{% form_theme form_reset_user_password '@ibexadesign/account/form_fields.html.twig'  %}

{%- block title -%}{{ parent() }} - {{ 'change_password.title'|trans|desc('Change password') }}{%- endblock -%}

{%- block content -%}
    <h2 class="ibexa-login__actions-headline">{{ 'ezplatform.reset_user_password.change_password'|trans|desc('Change password') }}</h2>
    {% if form_reset_user_password is defined %}
        {{ form_start(form_reset_user_password, {'attr': {'class': 'ibexa-form-validate'}}) }}
        <fieldset>
            {{ form_widget(form_reset_user_password.new_password) }}
        </fieldset>
        {{ form_widget(form_reset_user_password.update, {'attr': {'class': 'btn ibexa-btn ibexa-btn--primary ibexa-login__btn--change-password'}}) }}
        {{ form_end(form_reset_user_password) }}
    {% endif %}

{%- endblock content -%}
