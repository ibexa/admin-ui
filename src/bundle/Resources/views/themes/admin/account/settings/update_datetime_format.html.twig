{% extends '@ibexadesign/account/settings/update.html.twig' %}

{% trans_default_domain 'ibexa_user_settings' %}

{% block date_time_format_widget %}
    {{ block('form_widget') }}
    {% embed '@ibexadesign/ui/component/alert/alert.html.twig' with {
        type: 'info',
        title: 'settings.datetime_format.preview_label'|trans|desc('Date and Time will be displayed in this format:'),
        icon_path: ibexa_icon_path('hide'),
        class: 'mt-4',
    } only %}
        {% block extra_content %}
            <span class="ibexa-datetime-format-preview-value" />
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ibexa-admin-ui-settings-datetime-format-update-js', null, 'ibexa') }}
{% endblock %}
